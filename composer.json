{
  "name": "islandora/tuque",
  "description": "A PHP API for connecting to the Fedora Commons repository software.",
  "homepage": "http://islandora.ca",
  "license": "GPLv3",
  "require": {
    "php": ">=5.3.0",
    "lib-curl": "*",
    "lib-libxml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "*",
    "sebastian/phpcpd": "*"
  },
  "autoload": {
    "psr-4": {"Islandora\\Tuque\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": { "Islandora\\Tuque\\Tests\\": "tests/" }
  },
  "scripts": {
    "check": [
      "phpcs --standard=PSR2 src",
      "phpcpd --names *.php src"
    ],
    "test": [
      "@check",
      "phpunit"
    ]
  }
}
